<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Sign Up</title>
  <link rel="stylesheet" href="/css/styles.css">
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
  <script src="https://www.google.com/recaptcha/api.js" async defer></script>
</head>
<body>
  <div class="container">
    <h2 class="mt-5">Sign Up</h2>
    <form action="/auth/signup" method="post" id="signup-form">
      <div class="form-group">
        <label for="email">Email address:</label>
        <input type="email" class="form-control" id="email" name="email" required>
      </div>
      <div class="form-group">
        <label for="pwd">Password:</label>
        <input type="password" class="form-control" id="pwd" name="password" required>
        <small id="passwordHelp" class="form-text text-muted">Must be at least 6 characters long.</small>
        <div id="password-strength" class="mt-2"></div>
      </div>
      <div class="g-recaptcha" data-sitekey="<%= recaptchaSiteKey %>"></div>
      <button type="submit" class="btn btn-primary">Sign Up</button>
      <p class="mt-3">Already have an account? <a href="/auth/login">Login here</a>.</p>
    </form>
    <button onclick="googleLogin()" class="btn btn-danger mt-2">Sign Up with Google</button>
    <button onclick="facebookLogin()" class="btn btn-primary mt-2">Sign Up with Facebook</button>
  </div>
  <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.4/dist/umd/popper.min.js"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
  <script src="/js/passwordStrength.js"></script>
  <script type="module">
    import { googleLogin, facebookLogin } from '/js/firebase.js';
    window.googleLogin = googleLogin;
    window.facebookLogin = facebookLogin;
  </script>
</body>
</html>
